{
  "root": true,
  "ignorePatterns": ["dist", "node_modules", ".angular", "coverage", "vite.config.ts"],
  "overrides": [
    {
      "files": ["*.ts"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": ["tsconfig.json"],
        "createDefaultProgram": true
      },
      "extends": ["airbnb-base", "airbnb-typescript/base", "plugin:@angular-eslint/recommended"],
      "rules": {
        "max-len": ["error", { "code": 120 }],
        "import/prefer-default-export": "off",
        "no-console": "off",
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": ["**/*.spec.ts", "**/*.test.ts"]
          }
        ],
        "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": ["app"],
            "style": "kebab-case"
          }
        ],
        "object-curly-newline": [
          "error",
          {
            "ImportDeclaration": {
              "multiline": true,
              "minProperties": 6
            }
          }
        ]
      }
    },
    {
      "files": ["*.html"],
      "extends": ["plugin:@angular-eslint/template/recommended"],
      "rules": {}
    },
    {
      "files": ["src/app/features/auth/**"],
      "rules": {
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "auth",
            "style": "kebab-case"
          }
        ]
      }
    },
    {
      "files": ["src/app/shared/**"],
      "rules": {
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "shared",
            "style": "kebab-case"
          }
        ]
      }
    }
  ]
}
