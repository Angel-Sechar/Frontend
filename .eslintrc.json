{
  "root": true,
  "ignorePatterns": [
    "dist",
    "node_modules",
    ".angular",
    "coverage",
    "*.spec.ts",
    "vite.config.ts",
    "*.config.js"
  ],
  "overrides": [
    {
      "files": ["*.ts"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": ["tsconfig.json"],
        "createDefaultProgram": true
      },
      "extends": ["airbnb-base", "airbnb-typescript/base", "plugin:@angular-eslint/recommended"]
    },
    {
      "files": ["*.html"],
      "extends": ["plugin:@angular-eslint/template/recommended"],
      "rules": {}
    }
  ]
}
